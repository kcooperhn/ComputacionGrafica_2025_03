<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">

    <!-- ImageView para mostrar la foto capturada por la cámara -->
    <ImageView
        android:id="@+id/imageView_captured"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/darker_gray"
        android:contentDescription="@string/captured_image_description"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="4:3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_take_picture"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <!-- ScrollView para el texto extraído en caso de que sea muy largo -->
    <ScrollView
        android:id="@+id/scrollView_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView_captured"
        app:layout_constraintStart_toStartOf="@+id/imageView_captured"
        app:layout_constraintTop_toBottomOf="@+id/imageView_captured">

        <!-- TextView para mostrar los datos extraídos con ML Kit -->
        <TextView
            android:id="@+id/textView_mlkit_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            tools:text="Aquí se mostrarán los resultados del análisis de ML Kit. Este es un texto de ejemplo para visualizar el diseño." />

    </ScrollView>

    <!-- Botón para tomar la fotografía y activar el análisis -->
    <Button
        android:id="@+id/button_take_picture"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/take_picture_and_analyze"
        app:layout_constraintStart_toStartOf="@+id/imageView_captured"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_select_picture"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/select_picture_and_analyze"
        app:layout_constraintBottom_toBottomOf="@+id/button_take_picture"
        app:layout_constraintEnd_toEndOf="@+id/imageView_captured"
        app:layout_constraintStart_toEndOf="@+id/button_take_picture"
        app:layout_constraintTop_toTopOf="@+id/button_take_picture" />

</androidx.constraintlayout.widget.ConstraintLayout>
